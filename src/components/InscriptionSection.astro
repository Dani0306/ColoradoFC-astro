---
import { TypingText, MotionImage, MotionP } from "./MotionComponents";
const { title, content, img, reverse = false } = Astro.props;

---

<section class="w-full h-max relative overflow-hidden flex items-center justify-center flex-col my-40">
    <div class={`w-full xl:w-[85%] h-full flex flex-col px-6 sm:px-16 ${reverse ? "lg:flex-row-reverse" : "lg:flex-row"} items-center justify-center`}>
    <div class="absolute top-[30%] lg:right-0 left-[20%] w-[30%] h-[30%] inset-[0] gradient-01" />
        <div class="w-full lg:w-[60%] h-full flex flex-col items-start justify-between lg:py-16">
                <TypingText reduced title={title} client:load/>
                <MotionP content={content} styles="mt-[40px] font-normal text-base lg:text-xl text-justify text-white" client:load>
        </div>
        <div class={`h-max w-full lg:w-[40%] ${reverse ? "lg:justify-start" : "lg:justify-end"} flex items-center`}>
            <MotionImage direction={reverse ? "left" : "right"} img={img} styles="h-[250px] lg:h-[350px] lg:w-[400px] w-[300px] my-20 lg:my-0 object-cover rounded-xl" client:load>
        </div>
    </div>
</section>


<style>
    .gradient-01 {
      background-image: linear-gradient(
        270deg,
        red 0%,
        gold 70%
      );
      filter: blur(125px);
      opacity: 0.3;
    }
    </style>