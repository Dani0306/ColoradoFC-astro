---
import NavList from "./NavList";
import MenuButton from "./MenuButton"
---
<nav class="w-full mx-auto h-[8vh] lg:h-[10vh] flex items-center justify-between fixed top-0 left-0 px-4 lg:px-8 bg-black z-50">
    <img src="/logo.png" alt="logo" class="w-max h-[60px] object-cover">
    <h2 class="font-extrabold text-xl radiant-text text-white">COLORADO FC</h2>
    <MenuButton client:load />
    <NavList client:load />
</nav>


<style>
    .radiant-text {
    background: linear-gradient(45deg, yellow, #E3590A);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}
</style>